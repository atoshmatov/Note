<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/item_style"
    android:elevation="6dp"
    android:padding="6dp">

    <CheckBox
        android:id="@+id/taskCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/noteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/taskCheck"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="fjdkjbgfdnbhlfdbkvjhbfdjlbvh,dvhf,d" />

    <TextView
        android:id="@+id/noteData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#494747"
        app:drawableStartCompat="@drawable/ic_calendar"
        app:layout_constraintBottom_toBottomOf="@+id/taskCheck"
        app:layout_constraintEnd_toEndOf="@+id/noteText"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/noteText"
        app:layout_constraintTop_toBottomOf="@id/noteText"
        tools:text="    12:20" />

    <TextView
        android:id="@+id/taskTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#494747"
        app:drawableStartCompat="@drawable/ic_time"
        app:layout_constraintBottom_toBottomOf="@+id/noteData"
        app:layout_constraintEnd_toEndOf="@+id/noteText"
        app:layout_constraintStart_toEndOf="@+id/noteData"
        app:layout_constraintTop_toTopOf="@+id/noteData"
        tools:text="    22:20" />

</androidx.constraintlayout.widget.ConstraintLayout>