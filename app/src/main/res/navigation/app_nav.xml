<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav.xml"
    app:startDestination="@id/mainScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="uz.gita.noteAppMobDev.presentation.view.screen.splash.SplashScreen"
        android:label="screen_splash"
        tools:layout="@layout/screen_splash" >
        <action
            android:id="@+id/action_splashScreen_to_mainScreen4"
            app:destination="@id/mainScreen"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainScreen"
        android:name="uz.gita.noteAppMobDev.presentation.view.screen.main.MainScreen"
        android:label="screen_main"
        tools:layout="@layout/screen_main" >
        <action
            android:id="@+id/action_mainScreen_to_notesPager"
            app:destination="@id/notesPager" />
        <action
            android:id="@+id/action_mainScreen_to_taskPager"
            app:destination="@id/taskPager" />
    </fragment>
    <fragment
        android:id="@+id/notesPager"
        android:name="uz.gita.noteAppMobDev.presentation.view.screen.main.pager.NotesPager"
        android:label="pager_notes"
        tools:layout="@layout/pager_notes" />
    <fragment
        android:id="@+id/taskPager"
        android:name="uz.gita.noteAppMobDev.presentation.view.screen.main.pager.TaskPager"
        android:label="pager_task"
        tools:layout="@layout/pager_task" />
</navigation>